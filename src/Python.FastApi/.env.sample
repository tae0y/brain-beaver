# BrainBeaver Backend Environment Variables
# Copy this file to .env and update the values according to your environment

# ---------- Database Configuration ----------
# PostgreSQL connection string
DB_CONNECTION_STRING=postgresql://root:root@localhost:5432/bwsdb

# Database connection pool settings
DB_ECHO_TRUEFALSE=False
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=0

# ---------- External API Keys (Required) ----------
# Naver Search API credentials
NAVER_CLIENT_ID={YOUR_CLIENT_ID}
NAVER_CLIENT_SECRET={YOUR_CLIENT_SECRET}
NAVER_WEBKR_URL=https://openapi.naver.com/v1/search/webkr.json?query=

# OpenAI API key (optional - can use Ollama instead)
OPENAI_API_KEY={YOUR_API_KEY}

# Google Programmable Search Engine (optional)
GOOGLE_PSE_API_URL=
GOOGLE_PSE_API_KEY=
GOOGLE_PSE_CX=
GOOGLE_PSE_DATARESTRICT=
GOOGLE_PSE_FILTER=
GOOGLE_PSE_H1=
GOOGLE_PSE_NUM=
GOOGLE_PSE_SAFE=

# ---------- Message Queue Configuration ----------
# RabbitMQ credentials
RABBITMQ_USER=admin
RABBITMQ_PASSWD=nimda

# ---------- Application Settings ----------
# Thread pool configuration
THREAD_GLOBAL_THREAD_POOL=10

# Ollama configuration
OLLAMA_MAX_QUEUE=100
OLLAMA_NUM_PARALLEL=10