# BrainBeaver Environment Variables Example
# Copy this file to .env and configure your values

# ====================================
# Basic Configuration
# ====================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=BrainBeaver
APP_VERSION=2.0.0

# ====================================
# Database Configuration  
# ====================================
DATABASE_URL=postgresql://root:root@localhost:5432/bwsdb
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
ENABLE_PGVECTOR=false

# ====================================
# Runtime Configuration
# ====================================
PARALLEL_WORKERS=4
BATCH_SIZE=10
QUEUE_MAX=1000
RETRY_MAX=3
TIMEOUT_SEC=30

# ====================================
# LLM Configuration
# ====================================
LLM_PROVIDER=ollama
LLM_MODEL_CHAT=llama2
LLM_MODEL_EMBED=text-embedding-3-large
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1

# API Keys (keep these secure!)
OPENAI_API_KEY=
OLLAMA_HOST=http://localhost:11434

# ====================================
# Chunking Configuration
# ====================================
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP_TOKENS=50
CHUNK_MIN_TOKENS=50

# ====================================
# File Processing Configuration
# ====================================
FILE_EXTENSIONS=.md,.mdx,.txt,.rst
FILE_IGNORE_PATTERNS=.git,node_modules,__pycache__,.venv

# ====================================
# Web Crawling Configuration
# ====================================
CRAWL_DEPTH=2
CRAWL_RATE_LIMIT_PER_DOMAIN=2
CRAWL_DELAY_MS=300
CRAWL_MAX_PAGES=1000
CRAWL_TIMEOUT_SEC=10
CRAWL_ALLOWED_DOMAINS=

# ====================================
# Logging and Observability
# ====================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=8090

# OpenTelemetry (optional)
OTEL_EXPORTER_ENDPOINT=
OTEL_SERVICE_NAME=brainbeaver-api

# ====================================
# Security Configuration
# ====================================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://bws_vite:5173
API_RATE_LIMIT=100

# ====================================
# Miscellaneous
# ====================================
TEMP_DIR=/tmp/brainbeaver
CACHE_TTL_SEC=3600